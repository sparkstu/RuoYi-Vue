<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.api.mapper.DatasourceMapper">
    
    <resultMap type="Datasource" id="DatasourceResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="note"    column="note"    />
        <result property="type"    column="type"    />
        <result property="url"    column="url"    />
        <result property="username"    column="username"    />
        <result property="password"    column="password"    />
        <result property="driver"    column="driver"    />
        <result property="tableSql"    column="table_sql"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectDatasourceVo">
        select id, name, note, type, url, username, password, driver, table_sql, create_time, update_time from api_datasource
    </sql>

    <select id="selectDatasourceList" parameterType="DatasourceBo" resultMap="DatasourceResult">
        <include refid="selectDatasourceVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="note != null  and note != ''"> and note = #{note}</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="url != null  and url != ''"> and url = #{url}</if>
            <if test="username != null  and username != ''"> and username like concat('%', #{username}, '%')</if>
            <if test="password != null  and password != ''"> and password = #{password}</if>
            <if test="driver != null  and driver != ''"> and driver = #{driver}</if>
            <if test="tableSql != null  and tableSql != ''"> and table_sql = #{tableSql}</if>
        </where>
    </select>
    
    <select id="selectDatasourceById" parameterType="String" resultMap="DatasourceResult">
        <include refid="selectDatasourceVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDatasource" parameterType="Datasource">
        insert into api_datasource
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="note != null">note,</if>
            <if test="type != null">type,</if>
            <if test="url != null">url,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="driver != null">driver,</if>
            <if test="tableSql != null">table_sql,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null and updateTime != ''">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="note != null">#{note},</if>
            <if test="type != null">#{type},</if>
            <if test="url != null">#{url},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="driver != null">#{driver},</if>
            <if test="tableSql != null">#{tableSql},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null and updateTime != ''">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateDatasource" parameterType="Datasource">
        update api_datasource
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="note != null">note = #{note},</if>
            <if test="type != null">type = #{type},</if>
            <if test="url != null">url = #{url},</if>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="driver != null">driver = #{driver},</if>
            <if test="tableSql != null">table_sql = #{tableSql},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null and updateTime != ''">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDatasourceById" parameterType="String">
        delete from api_datasource where id = #{id}
    </delete>

    <delete id="deleteDatasourceByIds" parameterType="String">
        delete from api_datasource where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
